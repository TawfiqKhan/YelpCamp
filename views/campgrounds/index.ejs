<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron">
		<div class="container">	
			<h1>Welcome to YelpCamp!</h1>
			<p>View Our Hand picked camp ground from all over the world!</p>
			<p>
				<a class="btn btn-large btn-primary" href="/campgrounds/new">Add New Campgrounds</a>
			</p>
		</div>
	</header>
	
		  <div class="row text-center">
			<div class="col-lg-12">
				<h3 class="text-center text-capitalize">
					our most popular campgrounds
				</h3>
				<hr>	
			</div>
	</div>
	<div class="row text-center home-thumbnail">
	<% campgrounds.forEach(function(camp) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail text-center">
					<img id="img-thumbnail" src="<%=camp.image %>" alt="<%=camp.title %>">
					<div class="caption">
						<h4><%=camp.name %></h4>
					</div>
					<p>
						<a class="btn btn-primary" href="/campgrounds/<%= camp._id%>">More Info</a>
					</p>
				</div>			
			</div>		
			<%	}) %>
			</div>
	</div>
		

<%- include("../partials/footer") %>